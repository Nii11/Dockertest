
services:
	wpsos:
	  image=centos:latest
	  restart: always
	  volumes:
	      -shared:/var/www/html
	      -prod:/prod
	  ports: 8082:80
	  networks: nan

	prod:
  	  image: centos:latest
	  restart: always
  	  volumes: 
	      -prod:/var/www/html
	      -shared:/shared
	  ports: 8082:80
	  depends_on: wpsos



volumes:
	prod:
	shared:
networks:
    nan:
        # use the bridge driver, but enable IPv6
        driver: none
